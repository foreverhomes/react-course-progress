.order-enter
	transform translateX(-120%)
	max-height 0
	padding 0 !important
	transition all 0.5s
	&.order-enter-active 
		transform translateX(0)
		max-height 60px
		padding 2rem 0 !important

.order-leave
	opacity 1
	max-height 60px
	padding 2rem 0 !important
	transition all 0.5s
	&.order-leave-active
		opacity 0
		max-height 0
		padding 0 !important

.count-enter
	transition all 250ms
	transform translateY(100%)
	&.count-enter-active
		transform translateY(0)

.count-leave
	transition all 250ms
	transform translateY(0)
	position absolute
	top 0
	left 0
	&.count-leave-active
		transform translateY(100%)



